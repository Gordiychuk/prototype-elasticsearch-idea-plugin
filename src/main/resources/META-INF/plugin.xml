<idea-plugin>
    <id>vlgo.intellij.plugin.elasticsearch</id>
    <name>elasticsearch-idea-plugin</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="folyga@gmail.com" url="https://github.com/Gordiychuk">Vladimir Gordiychuk</vendor>

    <description><![CDATA[
      ElasticSearch console.<br>
    ]]></description>

    <change-notes/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
