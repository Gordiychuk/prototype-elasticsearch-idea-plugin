            <action id="ElasticSearchServers.AddServer" class="vlgo.intellij.plugin.elasticsearch.view.action.AddServerAction"/>
            <action id="ElasticSearchServers.RemoveServer" class="vlgo.intellij.plugin.elasticsearch.view.action.RemoveServerAction"/>
