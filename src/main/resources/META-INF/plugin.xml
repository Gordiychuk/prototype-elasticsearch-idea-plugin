            <!--<action id="RemoteServers.EditDeploymentConfig" class="com.intellij.remoteServer.impl.runtime.ui.tree.actions.DeploymentConfigAction"/>-->
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Elasticsearch" icon="/icons/elasticsearch-16x16.png" anchor="right"
                    factoryClass="vlgo.intellij.plugin.elasticsearch.view.ElasticSearchToolWindowFactory"/>
        <projectService serviceInterface="vlgo.intellij.plugin.elasticsearch.ElasticsearchServersSetting"
